<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"

    android:orientation="vertical"
    tools:context=".Fragments.AtcoderFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aleo"
                android:text="Username: "
                android:textColor="#787878"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/contestRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contest Rating: "
                android:fontFamily="@font/aleo"
                android:textSize="18sp"
                android:textColor="#787878"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/contestMaxRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Rating: "
                android:textColor="#787878"
                android:fontFamily="@font/aleo"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/contestRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rank : "
                android:fontFamily="@font/aleo"
                android:textColor="#787878"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/contestLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level: "
                android:textColor="#787878"
                android:fontFamily="@font/aleo"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/infoForUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/butcherman"
        android:text="@string/more_features_update_soon"
        android:textColor="#535353"
        android:textSize="20sp" />


</LinearLayout>